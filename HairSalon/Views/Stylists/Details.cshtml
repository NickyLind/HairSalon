@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>Stylist Name: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
<div class="stylist">
  <h4>Stylist Specialty: @Html.DisplayFor(model => model.Details)</h4>
  <h5>Stylist's Clients: </h5>
</div>
<div class="lists">
  <div class="stylistClients">
    <ul>
      @if (Model.Clients.Count == 0)
      {
        <p>This Stylist has no Clients right now.</p>
      }
      @foreach (var client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", "Clients", new { id = client.ClientId })</li>
      }
    </ul>
  </div>
</div>
<div class="links">
    <p>Add a @Html.ActionLink("Client", "Create", "Clients")</p>
    <p>Back to @Html.ActionLink("Stylist List", "Index")</p>
    <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId} )</p>
    <p>@Html.ActionLink("Remove Stylist", "Delete", new { id = Model.StylistId })</p>
</div>