@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1> 
<h5>Click a Stylist to book a client</h5>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.FirstName} {stylist.LastName}", "Details", new { id = stylist.StylistId })</li>   
  }
</ul>
<p>Add a new @Html.ActionLink("Stylist", "Create")</p>
<p>Back to @Html.ActionLink("Home", "Index", "Home") page.</p>