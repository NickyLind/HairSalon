@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h4>Add a new client</h4>
<div class="createForms">
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FirstName, "First Name: ")
  @Html.TextBoxFor(model => model.FirstName)
  <br>
  @Html.LabelFor(model => model.LastName, "Last Name: ")
  @Html.TextBoxFor(model => model.LastName)
  <br>
  @Html.LabelFor(model => model.Description, "Appointment Description: ")
  @Html.TextBoxFor(model => model.Description)
  <br>
  @Html.LabelFor(model => model.Stylist, "Stylist: ")
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Add new client" />
}
</div>
<div class="links">
  <p>Return to @Html.ActionLink("Stylist List", "Index", "Stylists")</p>
</div>