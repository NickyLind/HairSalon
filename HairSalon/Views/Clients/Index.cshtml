@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1> Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
}

<ul>
@foreach (Client client in Model)
{
  <li><p>@Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", new { id = client.ClientId }) | Stylist:  @client.Stylist.FirstName @client.Stylist.LastName</p></li>
}
</ul>
<p>Add new @Html.ActionLink("Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>